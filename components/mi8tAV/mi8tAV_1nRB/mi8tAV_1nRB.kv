<mi8tAV_1nRB>:
    name: "Mi8tAV_1nRB"
    Screen:
        ScrollView:
            size: self.size
            GridLayout:
                cols: 1
                spacing: "20dp"
                padding: "20dp"
                size_hint_y: None
                height: self.minimum_height
                width: self.minimum_width
                MDLabel:
                    text: "ОТКАЗ ОДНОГО ПОДКАЧИВАЮЩЕГО НАСОСА РАСХОДНОГО БАКА"
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: "green"
                    size_hint_y: None

                Label:
                    text: " При отказе одного из подкачивающих насосов расходного бака второй работающий насос полностью обеспечивает питание двигателей на всех режимах"
                    halign: "left"
                    text_size: 300, None
                    max_lines: 5
                    line_height: 1
                    font_size: "12sp"
                    theme_text_color: "Custom"
                    text_color: "white"
                    size_hint_y: None
                    bold: True

                MDRaisedButton:
                    text: "ГЛАВНОЕ МЕНЮ"
                    size_hint: 1, None
                    md_bg_color: "blue"
                    on_release: root.manager.current="mainScreen"; root.manager.transition.direction="left"

                MDRaisedButton:
                    text: "НАЗАД"
                    size_hint: 1, None
                    md_bg_color: "blue"
                    on_release: root.manager.current="Mi8tAV"; root.manager.transition.direction="left"