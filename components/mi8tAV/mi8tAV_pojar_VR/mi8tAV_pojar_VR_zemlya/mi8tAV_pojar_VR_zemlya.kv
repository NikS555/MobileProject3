<mi8tAV_pojar_VR_zemlya>:
    name: "Mi8tAV_pojar_VR_zemlya"
    Screen:
        ScrollView:
            size: self.size
            GridLayout:
                cols: 1
                spacing: "20dp"
                padding: "20dp"
                size_hint_y: None
                height: self.minimum_height
                width: self.minimum_width
                MDLabel:
                    text: "ПОЖАР В ОТСЕКЕ ГЛАВНОГО РЕДУКТОРА НА ЗЕМЛЕ"
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: "red"

                MDLabel:
                    text: "При возникновении пожара на стоянке"
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: "darkorange"
                    size_hint_y: None

                Label:
                    text: "В этом случае следует:\n - выключить оба двигателя кранами останова;\n - перекрыть топливо перекрывными кранами топлива вертолета и далее действовать в соответствии с рекомендациями"
                    halign: "left"
                    text_size: 300, None
                    markup: True
                    max_lines: 9
                    line_height: 1
                    font_size: "12sp"
                    theme_text_color: "Custom"
                    text_color: "white"
                    size_hint_y: None
                    bold: True

                MDLabel:
                    text: "При возникновении пожара на рулении "
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: "darkorange"
                    size_hint_y: None
                Label:
                    text: "В этом случае следует:\n - затормозить вертолет;\n - поставить вертолет на стояночный тормоз;\n - выключить двигатели кранами останова;\n - перекрыть топливо перекрывнымии кранами топлива вертолета и далее действовать в соответствии с рекомендациями"
                    halign: "left"
                    text_size: 300, None
                    max_lines: 8
                    line_height: 1
                    font_size: "12sp"
                    theme_text_color: "Custom"
                    text_color: "white"
                    size_hint_y: None
                    bold: True

                MDRaisedButton:
                    text: "РЕКОМЕНДАЦИИ"
                    size_hint: 1, None
                    md_bg_color: "red"
                    on_release: root.manager.current="Mi8tAV_pojar_VR"; root.manager.transition.direction="left"


                MDRaisedButton:
                    text: "ГЛАВНОЕ МЕНЮ"
                    size_hint: 1, None
                    md_bg_color: "blue"
                    on_release: root.manager.current="mainScreen"; root.manager.transition.direction="left"

                MDRaisedButton:
                    text: "НАЗАД"
                    size_hint: 1, None
                    md_bg_color: "blue"
                    on_release: root.manager.current="Mi8tAV"; root.manager.transition.direction="left"